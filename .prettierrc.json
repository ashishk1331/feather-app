{
    "printWidth": 80,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": false,
    "semi": true,
    "importOrder": [
        "^@expo/(.*)$",
        "^@/components/(.*)$",
        "^@/constants/(.*)$",
        "^@/assets/(.*)$",
        "^@/hooks/(.*)$",
        "^@/util/(.*)$",
        "^@/store/(.*)$",
        "^@/types/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
